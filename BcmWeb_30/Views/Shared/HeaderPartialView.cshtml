<table>
    <tr>
        <td style="width: 75%;">
            <table>
                <tr>
                    <td style="width: 10%; text-align: right; ">
                        <img src="~/Content/Images/Logo-BiaPlus.png" style="width: 70px; height: 70px;" />
                    </td>
                    <td style="width: 90%; padding-left: 5px;">
                        <h1 style="text-decoration: none;">@Resources.BCMWebPublic.labelAppTitle</h1>
                        <h4>@Resources.BCMWebPublic.labelAppSlogan</h4>
                    </td>
                </tr>
            </table>
        </td>
        <td style="text-align: right; width: 25%;">
            <div class="loginControl">
                @Html.Partial("LogOnPartialView")
            </div>
        </td>
    </tr>
</table>

@if (!Request.IsAuthenticated)
{
    <div class="headerMenu">
        @* DXCOMMENT: Configure the header menu *@
        @Html.DevExpress().Menu(settings =>
        {
            settings.Name = "HeaderMenu";
            settings.ItemAutoWidth = false;
            settings.ControlStyle.CssClass = "headerMenu";
            settings.SyncSelectionMode = SyncSelectionMode.CurrentPathAndQuery;
            settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
            settings.Items.Add(Resources.HomeIndex.labelHome).NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "Home", Action = "Index" });
            settings.Items.Add(Resources.HomeIndex.labelContact).NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "Home", Action = "Contact" });
            settings.Items.Add(Resources.HomeIndex.labelFAQ).NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "Home", Action = "FAQ" });
            settings.Items.Add(Resources.HomeIndex.labelAbout).NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "Home", Action = "About" });
            settings.ClientSideEvents.ItemClick = "function (s,e) { lp.Show(); }";
        }).GetHtml()
    </div>
}