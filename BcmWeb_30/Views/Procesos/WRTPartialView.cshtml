@using BcmWeb_30

@Html.DevExpress().ListBox(
    settings =>
    {
        settings.Name = "lbWRT";    
        settings.Width = 170;
        settings.Height = 150;
        settings.Properties.Caption = Metodos.GetNombreEscala(eTipoEscala.WRT);
        settings.Properties.CaptionSettings.Position = EditorCaptionPosition.Top;
        settings.Properties.SelectionMode = ListEditSelectionMode.CheckColumn;
        settings.Properties.ValueField = "IdTipoEscala";
        settings.Properties.ValueType = typeof(long);
        settings.Properties.TextField = "TipoEscala";
        settings.Properties.ItemStyle.Wrap = DefaultBoolean.True;
        settings.Properties.ClientSideEvents.SelectedIndexChanged = "FeaturesSelectionChanged";
    }
).BindList(Metodos.GetTipoEscalaGrafico(eTipoEscala.WRT)).GetHtml()
