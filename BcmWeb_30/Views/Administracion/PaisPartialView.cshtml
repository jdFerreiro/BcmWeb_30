@using BcmWeb_30
@using BcmWeb_30.Models

@model EmpresaModel

@Html.DevExpress().ComboBox(
    settings =>
    {
        settings.Name = "cmbPais";
        settings.Width = Unit.Percentage(50);
        settings.CallbackRouteValues = new { Controller = "Administracion", Action = "PaisPartialView" };
        settings.Properties.CallbackPageSize = 20;
        settings.Properties.DropDownStyle = DropDownStyle.DropDownList;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.TextFormatString = "{0}";
        settings.Properties.TextField = "Descripcion";
        settings.Properties.ValueField = "Id";
        settings.Properties.ValueType = typeof(System.Int64);
            settings.Properties.ClientSideEvents.SelectedIndexChanged = "function (s,e) { lp.Show(); $(\"#IdPais\").val(cmbPais.GetValue()); cmbEstado.PerformCallback(); }";
        settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
        settings.ShowModelErrors = true;
    }
).BindList(Metodos.GetPaises()).Bind(Model.IdPais).GetHtml()

