@using BcmWeb_30


<style type="text/css">
    .dxgvTable caption {
        color: white;
        background-color: navy;
    }
</style>

@Html.DevExpress().GridView(
settings =>
{
    settings.Name = "gvProbabilidadPrint";
    settings.CallbackRouteValues = new { Controller = "Reportes", Action = "ProbabilidadPartialView" };
    settings.Width = Unit.Percentage(100);
    settings.Caption = Resources.ReporteResource.TituloProbabilidad;
    

    settings.Columns.Add(c =>
    {
        c.Settings.AllowSort = DefaultBoolean.True;
        c.FieldName = "Descripcion";
        c.Caption = Resources.ReporteResource.captionProceso;
        c.CellStyle.HorizontalAlign = HorizontalAlign.Center;
        c.CellStyle.Wrap = DefaultBoolean.True;
        c.HeaderStyle.Wrap = DefaultBoolean.True;
        c.HeaderStyle.HorizontalAlign = HorizontalAlign.Center;
        c.HeaderStyle.VerticalAlign = VerticalAlign.Middle;
    });
    settings.Columns.Add(c =>
    {
        c.Settings.AllowSort = DefaultBoolean.True;
        c.FieldName = "Valoracion";
        c.Caption = Resources.ReporteResource.captionDescEscala;
        c.CellStyle.HorizontalAlign = HorizontalAlign.Center;
        c.CellStyle.Wrap = DefaultBoolean.True;
        c.HeaderStyle.Wrap = DefaultBoolean.True;
        c.HeaderStyle.HorizontalAlign = HorizontalAlign.Center;
        c.HeaderStyle.VerticalAlign = VerticalAlign.Middle;
    });
    
}).Bind(Metodos.GetProbabilidadEmpresa()).GetHtml()

